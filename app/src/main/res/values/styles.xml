<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base Style for Calculator Buttons -->
    <style name="CalcButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:backgroundTint">@color/calc_button_default_bg</item>
        <item name="android:textColor">@android:color/white</item> <!-- Đổi từ black → white -->
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- Blue Calculator Buttons (Operations, Clear, etc.) -->
    <style name="CalcButton.Blue" parent="CalcButton">
        <item name="android:backgroundTint">@color/calc_button_blue_bg</item>
    </style>

    <!-- White Calculator Buttons (Digits) -->
    <style name="CalcButton.White" parent="CalcButton">
        <item name="android:backgroundTint">@color/calc_button_white_bg</item>
    </style>

    <!-- Equal Button -->
    <style name="CalcButton.Equal" parent="CalcButton">
        <item name="android:backgroundTint">@color/calc_button_equal_bg</item>
    </style>

    <!-- Scientific Calculator Button -->
    <style name="CalcButton.Scientific" parent="CalcButton.Blue">
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Standalone Scientific Button style (if using separately) -->
    <style name="ScientificButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- Square Button Style with White Text -->
    <style name="CalcButton.Square">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">#2196F3</item> <!-- Nền xanh -->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_margin">1dp</item>
    </style>
</resources>